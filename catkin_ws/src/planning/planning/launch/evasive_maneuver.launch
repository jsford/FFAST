<launch>

    <arg name="obs_detect" default="true" />
    <arg name="obs_speed" />

    <group if="$(arg obs_detect)">
        <node pkg="obstacle_detector" type="obstacle_extractor_node" name="obstacle_extractor">
            <param name="use_scan" value="true" />
            <param name="use_pcl" value="false" />        
        </node>

        <node pkg="obstacle_detector" type="obstacle_tracker_node" name="obstacle_tracker" />
        <node pkg="avoid_obs_ilqr" type="mask_obstacles" name="mask_obstacles" />
    </group>

    <node pkg="avoid_obs_ilqr" type="set_dyn_obs" name="set_dyn_obs" unless="$(arg obs_detect)">
        <param name="obs_speed" value="$(arg obs_speed)" />
    </node>

    <node pkg="avoid_obs_ilqr" type="avoid_obs_ilqr_node" name="avoid_obs_ilqr" />
    <node pkg="avoid_obs_ilqr" type="avoid_obs_node" name="avoid_obs" output="screen" required="true" />

    <node pkg="avoid_obs_ilqr" type="estop_stamper" name="estop_stamper" />
    
    <!--node pkg="user_interface" type="stop_near_obs" name="stop_near_obs" /-->

</launch>
